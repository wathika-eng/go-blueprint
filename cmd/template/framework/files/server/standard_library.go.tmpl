package server

import (
	"fmt"
	"net/http"
	"os"
	"strconv"
	"time"

	_ "github.com/joho/godotenv/autoload"
  {{if ne .DBDriver "none"}}
	"{{.ProjectName}}/internal/database"
  {{end}}
)

type Server struct {
	port string
  {{if ne .DBDriver "none"}}
	db   database.Service
  {{end}}
}

func NewServer() (*http.Server, error) {
	var port string
	port = os.Getenv("PORT")
	// default port if port is not set
	if port == "" {
		port = "8080"
	}

	db, err := database.New()
	if err != nil {
		return nil, fmt.Errorf("failed to initialize database: %v", err)
	}

	NewServer := &Server{
		port: port,
  {{if ne .DBDriver "none"}}
		db:   db,
  {{end}}
	}

	// Declare Server config
	server := &http.Server{
		Addr:         fmt.Sprintf(":%v", NewServer.port),
		Handler:      NewServer.RegisterRoutes(),
		IdleTimeout:  time.Minute,
		ReadTimeout:  10 * time.Second,
		WriteTimeout: 30 * time.Second,
	}

	return server, nil
}
